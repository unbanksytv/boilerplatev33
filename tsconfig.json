{
  "compilerOptions": {
    // "experimentalDecorators": true,
    "baseUrl": ".",
    "outDir": "build",
    "module": "esnext",
    "target": "esnext",
    "lib": ["es6", "dom", "esnext.asynciterable", "es2017"],
    "sourceMap": true,
    // "allowJs": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true
  },
  "exclude": [
    "node_modules",
    "build",
    "test",
    "scripts",
    "acceptance-tests",
    "artifacts",
    "jest",
    "src/setupTests.ts",
  ]
}